@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>World Bank</h1>
    <p class="lead">Welcome to World Bank.</p>
    @*<p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>*@
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Balance check..</h2>
        <p>
           To check your account balance, click @Html.ActionLink("here", "CheckAccountBalance", "BalanceEnquiry") 
        </p>
        
    </div>
    <div class="col-md-4">
        <h2>Bank Statements.. </h2>
        <p>To get your last five transactions, click @Html.ActionLink("here", "MiniStatement", "BalanceEnquiry")</p>
       
    </div>
    <div class="col-md-4">
        <h2>Transaction..</h2>
        <p>To deposit money to your account, click @Html.ActionLink("here", "DepositMoney", "Transaction")</p>
        <p>To transfer money to other account, click @Html.ActionLink("here", "TransferMoney", "Transaction")</p>
        <p>To withdraw money, click @Html.ActionLink("here", "WithdrawMoney", "Transaction")</p>
        
    </div>
</div>